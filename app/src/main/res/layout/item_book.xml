<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bookshelf_height"
    android:background="@drawable/shelf_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/book_margin_bottom"
        android:layout_marginLeft="@dimen/cover_margin_left"
        android:background="@null"
        android:contentDescription="@string/book_cover" />

    <LinearLayout
        android:layout_width="@dimen/desription_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/book_margin_bottom"
        android:layout_marginRight="@dimen/description_margin_right"
        android:background="@drawable/description_background"
        android:orientation="vertical"
        android:padding="@dimen/description_padding">

        <TextView
            android:id="@+id/tv_book_title"
            style="@style/DescriptionStyleBold" />

        <TextView
            android:id="@+id/tv_book_author_date"
            style="@style/DescriptionStyle" />

        <TextView
            android:id="@+id/tv_book_price"
            style="@style/DescriptionStyle" />

    </LinearLayout>
</RelativeLayout>